{
    "manifest_version": 2,
    "name": "Pokemon Go Collection",
    "description": "We love Pokemon. So do you. Start your day with a beautiful pokemon picture that will give you a perfect mood!",
    "version": "1.2.7",
    "permissions": [
        "idle",
        "storage",
        "notifications",
        "alarms",
        "background"
    ],
    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },
    "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; connect-src 'self' http://www.pokemongocollection.org; object-src 'self'",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "Pokemon!"
    },
    "icons": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    }
}